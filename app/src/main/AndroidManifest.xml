<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shortblocker">

    <!-- No INTERNET permission on purpose -->

    <application
        android:allowBackup="true"
        android:label="Shorts Blocker"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShortsBlocker">
        <activity
            android:name=".OverlayActivity"
            android:exported="false"
            android:theme="@style/Theme.ShortsBlocker.NoActionBar" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".ShortsAccessibilityService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
    </application>

</manifest>
